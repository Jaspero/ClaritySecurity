rules_version = '2';

service firebase.storage {
  function admin() {
    return request.auth.token.role == 'admin'
  }

  match /b/{bucket}/o {

    match /public/{files=**} {
      allow read: if true;
      allow write: if admin();
    }

    match /generated/{files=**} {
      allow read: if true;
      allow write: if admin();
    }

    match /{files} {
      allow read, write: if admin();
    }
  }
}
